<div class="row">
	<div class="col-xs-3">
		<div class="border">
			<%if @avatar%>
				<%= link_to image_tag(@avatar.image.url, class: 'img-thumbnail'), 
				@avatar.image.url, target: '_blank'%>
			<%else%>
				<br><br><br><br>
				<center class="hint">Your photo here</center>
				<br><br><br><br>
			<%end%>
		</div>
		<br>

		<div class="border">
			<h4>Your followers:</h4><hr>
			<% @followers.each do |follower| %>
				<%=follower.username%> <br>
			<%end%>
		</div>
	</div>
	
	<div class="col-xs-8">	
		<div class="border">
			<h3><b><%= current_user.username %></b></h3><hr>
			<p><b>Amount of posts: </b><%= current_user.amount_of_posts %></p>
			<p><b>Sign in count: </b><%= current_user.sign_in_count %></p>
			<p><b>Current sign in at:</b> <%= current_user.current_sign_in_at %></p>
			<p><b>Current sign in ip: </b><%= current_user.current_sign_in_ip %></p>
			<p><b>Registered at: </b><%= current_user.created_at %></p>
		</div>
		<br>
		<div class="border">
			<hr>
			<%@posts.each do |post|%>					
					<h4><a href="<%=post_path(post)%>"><%=post.title%></a></h4>
					<b>Posted by:</b> <%= User.find(post.author_id).username %><hr>
			<%end%>
		</div>
	</div>
</div>