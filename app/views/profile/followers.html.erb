<h1>Followers</h1>

<hr>
<% $followers.each do |follower|%>

	<div class="row">
		<div class="col-xs-2">
			<%= link_to image_tag(follower.avatar.image.url, class: 'img-thumbnail'), 
				user_path(follower)%>
			<%=%>
		</div>
		<div class="col-xs-9">
			<b>Username: </b><%=link_to_user(follower)%><br>
			<b>Follows you since:</b> <%=follower.created_at%>
		</div>
	</div>
	<hr>
<%end%>