<div class="row">
	<div class="col-md-3 col-sm-4 col-xs-5">
		<%if @avatar%>
			<%= link_to image_tag(@avatar.image.url, class: 'img-thumbnail'), 
			@avatar.image.url, target: '_blank'%>
		<%else%>
			<%=image_tag("/no-avatar.png", class: 'img-thumbnail')%>
		<%end%>
	</div>
	
	<div class="col-md-8 col-sm-8 col-xs-7">	
		<div class="border content">
			<h2 class="content hamurz main-color"><b><%= current_user.username.downcase %></b></h2>
			<hr>
			<p><b>Amount of posts: </b><%= current_user.amount_of_posts %></p>
			<p><b>Sign in count: </b><%= current_user.sign_in_count %></p>
			<p><b>Current sign in at:<br></b> <%= current_user.current_sign_in_at %></p>
			<p><b>Current sign in ip: </b><%= current_user.current_sign_in_ip %></p>
			<p><b>Registered at:<br></b><%= current_user.created_at %></p>
		</div>		
	</div>
</div>
<hr>
<div class="row">

	<div class="col-md-3 col-sm-4 col-xs-12">
		<div class="border">
			<div class="panel panel-default">
			  	<div class="panel-heading">
				  	<a href="<%=profile_followers_path%>">
					    <span class="panel-title">Your followers </span>
					    <span class="badge"><%=$followers.length%></span>
					</a>
			  	</div>
			  	<div class="panel-body">
					<%if $followers.length > 0%>
						<% $followers.each do |follower| %>
							<%= link_to_user (follower) %><br>
						<%end%>
					<%else%>
						<p class="hint">You haven't any followers</p>
					<%end%>				
				</div>
			</div><hr>

			<div class="panel panel-default">
			  <div class="panel-heading">
			  	<a href="<%=profile_followings_path%>">
				    <span class="panel-title">Your followings </span>
				    <span class="badge"><%=$followings.length%></span>
				</a>
			  </div>
			  <div class="panel-body">
					<%if $followings.length > 0%>
						<% $followings.each do |following| %>
							<%= link_to_user (following) %><br>
						<%end%>
					<%else%>
						<p class="hint">You haven't any followings</p>
					<%end%>				
				</div>
			</div>
		</div>
	</div>
	
	<div class="visible-xs row">
		<div class="col-xs-12"><br><br></div>
	</div>

	<div class="col-md-8 col-sm-8 col-xs-12">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <span class="panel-title">Your posts </span>
		    <span class="badge"><%=@posts.length%></span>
		  </div>
		  <div class="panel-body">
				<%if @posts.length > 0%>
					<%= render partial: 'partials/posts', locals: {posts: @posts} %>
				<%else%>
					<p class="hint">You haven't any posts</p>
				<%end%>				
			</div>
		</div>
	</div>
</div>