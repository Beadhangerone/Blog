<div class="row">
	<div class="col-md-3 col-sm-4 col-xs-5">
		<%=render partial: "partials/avatar", locals: {resource: @user, size: '380x400'}%>
		<%if not @user.avatar%>
		<br><br>
		<%= hint("You haven't an avatar")%>
		<div class="list-group">
			<a class="list-group-item" href="<%=new_avatar_path%>"><%=icon('picture')%> Upload one
			</a>
		</div>
	<%end%>
	</div>
	
	<div class="col-md-8 col-sm-8 col-xs-7">	
		<div class="border content">
			<h2 class="hamurz main-color"><b><%= current_user.username.downcase %></b></h2>
			<hr>
			<p><b>Amount of posts: </b><%= @posts.length %></p>
			<p><b>Sign in count: </b><%= current_user.sign_in_count %></p>
			<p><b>Current sign in at:<br></b> <%= current_user.current_sign_in_at %></p>
			<p><b>Current sign in ip: </b><%= current_user.current_sign_in_ip %></p>
			<p><b>Registered at:<br></b><%= current_user.created_at %></p>
		</div>		
	</div>
</div>
<hr>
<div class="row">

<%=render partial: 'partials/follow-panels', 
	locals: {followers: $followers, followings: $followings, resource: @user}%>

	<div class="col-md-8 col-sm-8 col-xs-12">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <span class="panel-title">Your posts </span>
		    <span class="badge"><%=@posts.length%></span>
		  </div>
		  <div class="panel-body">
			<%= render partial: 'partials/posts', locals: {posts: @posts} %>			
		  </div>
		</div>
	</div>
</div>