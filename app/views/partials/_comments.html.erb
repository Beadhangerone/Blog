<%if user_signed_in?%>
	<%no_comments_message = "Your comment will be the first"%>
<%else%>
	<%no_comments_message = "No comments"%>
<%end%>
<%if comments.length > 0%>

	<%comments.each do |comment|%>
		<div class="panel panel-default">
		  <div class="panel-heading no-btm-padding">
			  <div class="row">
			  	<div class="col-xs-8">
			  		<%= link_to_user(user_by_id(comment.author_id))%> said:
			  	</div>
			  	<div class="col-xs-4">
		  			<%if user_signed_in?%>
			  			<% if comment.author_id == current_user.id%>
			  				<small class="right">
					  			<a data-confirm="Are you shure?" rel="nofollow" data-method="delete" 
					  				href="/post/<%=$post.id%>/comment/<%=comment.id%>" data-confirm="Are you sure ?">
					  				<%=icon('remove')%>
									</a>
		  					</small>
							<%end%>
						<%end%>
				  </div>
			  </div>
		  	<div class="arrow-up"></div>
		  </div>
		  <p class="content"><%=comment.text%></p>

		  <small class="right">
				<%=hint(comment.created_at)%>
			</small>
		</div>	
	<% end %>
<%else%>
	<h5><%= hint(no_comments_message)%></h5>
<%end%>