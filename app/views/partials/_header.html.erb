<%if @header%>
  <nav class="shadow container header-bar navbar-default">
    <div class="container-fluid">

      <%if width == "small"%>
        <div class="row">
          <div class="col-xs-9 hamurz main-color header-text">
            <%= @header %>
          </div>
          <%if bars%>
            <div class="col-xs-3">
              <button type="button" class="navbar-toggle" data-toggle="collapse" 
              data-target="#bars">
                <span class="icon-bar"></span>
              </button>
            </div>
          <%end%>
        </div>
        <div class="collapse navbar-collapse" id="bars">
          <%=render partial: 'partials/bar', locals: {bars: bars} %>
        </div>
      <%end%>

      <%if width == "large"%>
        <div class="row">
          <div class="col-xs-6 hamurz main-color header-text">
            <%= @header %>
          </div>
          <div class="col-xs-6">
            <%=render partial: 'partials/bar', locals: {bars: bars} %>
          </div>
        </div>
      <%end%>    
    </div>
  </nav>
<%end%>