<%if @header%>
  <nav class="shadow container border header-bar navbar-default">

      <%if width == "small"%>
          <div class="col-xs-9 hamurz main-color header-text">
            <%= @header %>
          </div>
          <%if bars && @access%>
            <div class="col-xs-3">
              <button type="button" class="navbar-toggle" data-toggle="collapse" 
              data-target="#bars">
                <span class="icon-bar"></span>
              </button>
            </div>
          <%end%>
        <div class="collapse navbar-collapse" id="bars">
          <%=render partial: 'partials/bar', locals: {bars: bars, access: @access} %>
        </div>
      <%end%>

      <%if width == "large"%>
          <div class="col-xs-6 hamurz main-color header-text">
            <%= @header %>
          </div>
          <div class="col-xs-6">
            <%=render partial: 'partials/bar', locals: {bars: bars, access: @access} %>
          </div>
      <%end%>
  </nav>
<%end%>