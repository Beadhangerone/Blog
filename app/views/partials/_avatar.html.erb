<%size = "206x206" unless size%>
<%cls =  '' unless cls%>
<%if resource.avatar%>
	<%= link_to image_tag(resource.avatar.image.thumb("#{size}#").url, class: "img-thumbnail #{cls}"), 
	user_path(resource)%>
<%else%>
	<%= link_to image_tag("/no-avatar.png", class: "img-thumbnail #{cls}"), 
		user_path(resource)%>
<%end%>