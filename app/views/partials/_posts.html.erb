<%if posts.length > 0%>
	<hr>
	<%posts.each do |post|%>					
	<h2><a href="<%=post_path(post)%>"><%=post.title%></a></h2>
	<b>Posted by:</b> <%=link_to_user(user_by_id(post.author_id)) %><br>
	<%=hint("#{post.comments.length} comments")%>
	<center>
		<a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%=post.id%>" aria-expanded="true" aria-controls="<%=post.id%>">
		<%=icon("chevron-down")%>
	    </a>
	</center>

	<div id="<%=post.id%>" class="collapse">
		<%=post.text%>
	</div>

    <hr>
<%end%>
<%else%>
	<%=hint("No posts yet")%>
<%end%>