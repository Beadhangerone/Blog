<div class="border">
	<%= form_for @avatar, url: {action: "create"} do |f| %>

		<%=render partial: "partials/errors", locals: {resource: @avatar}%>

		<%= f.label :photo %>
		<%= f.file_field :image %><br>

		<%= button_tag(type: 'submit', class: 'btn btn-default') do %>
	      <%=icon("ok")%> Upload
	    <%end%>

	<% end %>
</div>