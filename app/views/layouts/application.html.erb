<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body class="wall-papper">
    <br><br>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="icon-bar"></span>
              </button>
              <%= link_to "Main page", root_path, class: "navbar-brand" %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><%= link_to "<span class='glyphicon glyphicon-list-alt'></span> Show all posts".html_safe, post_index_path %></li>
                <li><%= link_to "<span class='glyphicon glyphicon-pencil'></span> Write a new post".html_safe, new_post_path %></li>
                <li><%= link_to "Photos", photos_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <%if user_signed_in?%>

                <li class="dropdown">
                  <a href="<%=profile_path%>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class='glyphicon glyphicon-user'></span> <%=current_user.username%> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="<%=profile_path%>"><span class='glyphicon glyphicon-file'></span> Your profile</a></li>
                    <li><a href="/settings"><span class='glyphicon glyphicon-cog'></span> Settings</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to "<span class='glyphicon glyphicon-log-out'></span> Sign out".html_safe, destroy_user_session_path, method: :delete %></li>
                  </ul>
                </li>

                <%else%>
                  <li>
                    <a href="<%=new_user_session_path%>">
                    <span class='glyphicon glyphicon-log-in'></span> Sign in</a>                   
                  </li>
                  <li>
                    <a href="<%=new_user_registration_path%>">
                    <span class='glyphicon glyphicon-check'></span> Sign up</a>
                  </li>
                <%end%>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
  <div class="main-block container border">
    <div class="row">
      <br><br><br>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <% if notice %>
          <center><div class="alert alert-success"><%= notice %></div></center>
        <% elsif alert %>
          <center><div class="alert alert-warning"><%= alert %></div></center>
        <%end%>

        <%= yield %>
      </div>

      <div class="col-xs-1"></div>
    </div>
    <br>
  </div>
<br><br><br>

  </body>
</html>
