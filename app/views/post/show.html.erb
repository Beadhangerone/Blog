
<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-5">
		<h2><%= @post.title %></h2>
		<hr>
		<p><%= @post.text %></p>
		<hr>
		<p>Posted by: <b><i><%= @post.author %></i></b> on <b><i><%= @post.created_at %></i></b></p>
	</div>
	<div class="col-xs-2">
		<% if @post.author == current_user.username %>
			<br><br><br><br>
			<div class="list-group">
				<%= link_to "Delete", post_path(@post), method: "delete", class: "list-group-item", data: {confirm: "Are you shure?"} %>
				<%= link_to "Edit", edit_post_path(@post), class: "list-group-item"%>
			</div>
		<%end%>
	</div>
</div>

<div class="row">

	<%= form_tag (post_comment_index_path(@post)) do %>
		<%= label_tag :comment %>
		<%= text_field_tag :comment, nil, class: 'form-control' %>
		<br><%= submit_tag 'Add comment', class: 'btn btn-default' %>
	<% end %>

	<%@post.comments.each do |comment|%>
		<p><%= comment.comment %></p>
	<% end %>

</div>


