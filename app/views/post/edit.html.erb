<%= form_for $post, url: {action: "update"} do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :text %>
	<%= f.text_area :text, class: 'form-control' %>

	<br>
	<%= button_tag(type: 'submit', class: 'btn btn-default') do %>
		<%=icon("ok")%></span> Done
	<%end%>
<%end%>	